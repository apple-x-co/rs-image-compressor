{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "png": {
      "type": "object",
      "properties": {
        "quality": {
          "type": "integer",
          "description": "1: High, 6: Low",
          "minimum": 1,
          "maximum": 6,
          "default": 3
        },
        "strip": {
          "type": "string",
          "enum": [
            "none",
            "safe",
            "all"
          ],
          "default": "all"
        },
        "interlacing": {
          "type": "string",
          "enum": [
            "none",
            "adam7"
          ],
          "default": "none"
        },
        "optimize_alpha": {
          "type": "boolean",
          "default": false
        }
      },
      "required": [
        "quality",
        "strip",
        "interlacing",
        "optimize_alpha"
      ]
    },
    "jpeg": {
      "type": "object",
      "properties": {
        "quality": {
          "type": "integer",
          "description": "100: High, 0: Low",
          "minimum": 0,
          "maximum": 100,
          "default": 70
        }
      },
      "required": [
        "quality"
      ]
    }
  }
}