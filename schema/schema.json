{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "png": {
      "type": "object",
      "properties": {
        "quality": {
          "type": "integer",
          "description": "1: High, 6: Low",
          "minimum": 1,
          "maximum": 6,
          "default": 3
        },
        "size": {
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "width": {
              "type": "integer",
              "minimum": 1
            },
            "height": {
              "type": "integer",
              "minimum": 1
            },
            "filter": {
              "type": "string",
              "enum": [
                "nearest",
                "triangle",
                "catmull_rom",
                "gaussian",
                "lanczos3"
              ],
              "default": "catmull_rom"
            }
          },
          "required": [
            "width",
            "height",
            "filter"
          ]
        },
        "strip": {
          "type": "string",
          "enum": [
            "none",
            "safe",
            "all"
          ],
          "default": "all"
        },
        "interlacing": {
          "type": "string",
          "enum": [
            "none",
            "adam7"
          ],
          "default": "none"
        },
        "optimize_alpha": {
          "type": "boolean",
          "default": false
        }
      },
      "required": [
        "quality",
        "size",
        "strip",
        "interlacing",
        "optimize_alpha"
      ]
    },
    "jpeg": {
      "type": "object",
      "properties": {
        "quality": {
          "type": "integer",
          "description": "100: High, 0: Low",
          "minimum": 0,
          "maximum": 100,
          "default": 70
        },
        "size": {
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "width": {
              "type": "integer",
              "minimum": 1
            },
            "height": {
              "type": "integer",
              "minimum": 1
            },
            "filter": {
              "type": "string",
              "enum": [
                "nearest",
                "triangle",
                "catmull_rom",
                "gaussian",
                "lanczos3"
              ],
              "default": "catmull_rom"
            }
          },
          "required": [
            "width",
            "height",
            "filter"
          ]
        },
        "scan_optimization_mode": {
          "type": "string",
          "enum": [
            "all_components_together",
            "scan_per_component",
            "auto",
            "none"
          ],
          "default": "none"
        },
        "progressive_mode": {
          "type": "boolean",
          "default": false
        },
        "optimize_coding": {
          "type": "boolean",
          "default": true
        },
        "use_scans_in_trellis": {
          "type": "boolean",
          "default": false
        },
        "smoothing_factor": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "default": 0
        },
        "exif": {
          "type": "string",
          "enum": [
            "all",
            "orientation",
            "none"
          ],
          "default": "none"
        }
      },
      "required": [
        "quality",
        "size",
        "scan_optimization_mode",
        "progressive_mode",
        "optimize_coding",
        "use_scans_in_trellis",
        "smoothing_factor",
        "exif"
      ]
    }
  }
}