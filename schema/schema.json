{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "png": {
      "type": "object",
      "properties": {
        "quality": {
          "type": "integer",
          "description": "1: High, 6: Low",
          "minimum": 1,
          "maximum": 6
        },
        "strip": {
          "type": "string",
          "enum": [
            "none",
            "safe",
            "all"
          ]
        },
        "interlacing": {
          "type": "string",
          "enum": [
            "none",
            "adam7"
          ]
        }
      },
      "required": [
        "quality",
        "strip",
        "interlacing"
      ]
    },
    "jpeg": {
      "type": "object",
      "properties": {
        "quality": {
          "type": "integer",
          "description": "100: High, 0: Low",
          "minimum": 0,
          "maximum": 100
        }
      },
      "required": [
        "quality"
      ]
    }
  }
}